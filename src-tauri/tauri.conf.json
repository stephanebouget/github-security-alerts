{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GitHub Security Alerts",
  "version": "1.0.0",
  "identifier": "com.github.security.alerts",
  "build": {
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run web:serve",
    "beforeBuildCommand": "npm run web:prod"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GitHub Alerts",
        "label": "main",
        "width": 420,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "center": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main"],
          "permissions": ["shell:allow-open"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Monitor GitHub security alerts",
    "longDescription": "A system tray application to monitor GitHub Dependabot security alerts",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
