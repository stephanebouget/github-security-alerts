{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../dist"
  },
  "package": {
    "productName": "GitHub Security Alerts",
    "version": "1.1.0"
  },
  "app": {
    "identifier": "com.githubsecurityalerts.app",
    "windows": [
      {
        "title": "GitHub Security Alerts",
        "width": 400,
        "height": 600,
        "resizable": true,
        "skipTaskbar": true,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/stephanebouget/github-security-alerts/releases/latest/download/latest.json"
    ],
    "dialog": false
  }
}