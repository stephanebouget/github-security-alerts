{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GitHub Security Alerts",
  "version": "1.1.0",
  "identifier": "com.githubsecurityalerts.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GitHub Security Alerts",
        "label": "main",
        "width": 400,
        "height": 600,
        "resizable": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "GitHub Security Alerts Monitor",
    "longDescription": "Monitor security alerts across your GitHub repositories"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/stephanebouget/github-security-alerts/releases/latest/download/latest.json"
      ],
      "dialog": false
    }
  }
}