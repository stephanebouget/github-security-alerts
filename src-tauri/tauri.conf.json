{
  "productName": "GitHub Security Alerts",
  "version": "1.2.0",
  "identifier": "com.github.security.alerts",
  "build": {
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run web:serve",
    "beforeBuildCommand": "npm run web:prod"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GitHub Security Alerts",
        "label": "main",
        "width": 420,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "center": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main"],
          "permissions": ["shell:allow-open"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "GitHub Security Alerts Monitor",
    "longDescription": "Monitor security alerts across your GitHub repositories",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE1QjFDRDcyQzgwQ0Q2REQKUldUZDFnekljczJ4cFhxOFhTQmRGV0piVEUzQVRjUVZMa2RtQytPT2FZcHFVUFg2cVB4eVlabWQK",
      "endpoints": [
        "https://github.com/stephanebouget/github-security-alerts/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
